<%- include('partials/head') %>

<style>
  :root {
    --primary-teal: #008B8B;
    --primary-teal-dark: #006B6B;
    --success-green: #28a745;
    --light-bg: #f8f9fa;
    --card-shadow: 0 2px 8px rgba(0, 0, 0, 0.08);
  }

  body {
    background-color: var(--light-bg);
    font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
  }

  .success-container {
    max-width: 800px;
    margin: 50px auto;
    padding: 20px;
  }

  .success-card {
    background: white;
    border-radius: 16px;
    box-shadow: 0 4px 20px rgba(0, 0, 0, 0.1);
    overflow: hidden;
  }

  .success-header {
    background: linear-gradient(135deg, var(--success-green) 0%, #20c997 100%);
    padding: 50px 30px;
    text-align: center;
    color: white;
  }

  .success-icon {
    width: 100px;
    height: 100px;
    background: white;
    border-radius: 50%;
    display: inline-flex;
    align-items: center;
    justify-content: center;
    margin-bottom: 20px;
    animation: scaleIn 0.5s ease-in-out;
  }

  @keyframes scaleIn {
    0% {
      transform: scale(0);
    }
    50% {
      transform: scale(1.1);
    }
    100% {
      transform: scale(1);
    }
  }

  .success-icon svg {
    width: 60px;
    height: 60px;
    color: var(--success-green);
  }

  .success-header h2 {
    font-size: 2rem;
    font-weight: 700;
    margin-bottom: 10px;
  }

  .success-header p {
    font-size: 1.1rem;
    opacity: 0.95;
  }

  .success-body {
    padding: 40px 30px;
  }

  .order-id-box {
    background: linear-gradient(135deg, rgba(0, 139, 139, 0.1) 0%, rgba(0, 139, 139, 0.05) 100%);
    border: 2px solid var(--primary-teal);
    border-radius: 12px;
    padding: 20px;
    text-align: center;
    margin-bottom: 30px;
  }

  .order-id-box label {
    font-size: 0.9rem;
    color: #666;
    margin-bottom: 8px;
    display: block;
  }

  .order-id-box .order-id {
    font-size: 1.5rem;
    font-weight: 700;
    color: var(--primary-teal);
  }

  .info-grid {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: 20px;
    margin-bottom: 30px;
  }

  .info-item {
    padding: 15px;
    background: #f8f9fa;
    border-radius: 10px;
    border-left: 4px solid var(--primary-teal);
  }

  .info-item label {
    font-size: 0.85rem;
    color: #666;
    margin-bottom: 5px;
    display: block;
  }

  .info-item .value {
    font-size: 1.1rem;
    font-weight: 600;
    color: #333;
  }

  /* Price Breakdown */
  .price-breakdown {
    background: #f8f9fa;
    border-radius: 10px;
    padding: 20px;
    margin-bottom: 25px;
  }

  .price-breakdown-title {
    font-size: 1rem;
    font-weight: 600;
    color: #333;
    margin-bottom: 15px;
  }

  .price-row {
    display: flex;
    justify-content: space-between;
    padding: 8px 0;
    font-size: 0.95rem;
    color: #666;
  }

  .price-row.discount {
    color: var(--success-green);
    font-weight: 600;
  }

  .price-row.total {
    border-top: 2px solid #dee2e6;
    padding-top: 12px;
    margin-top: 8px;
    font-size: 1.1rem;
    font-weight: 700;
    color: #333;
  }

  .price-row.total .amount {
    color: var(--primary-teal);
  }

  .timeline {
    margin: 30px 0;
  }

  .timeline-title {
    font-size: 1.2rem;
    font-weight: 600;
    color: #333;
    margin-bottom: 20px;
  }

  .timeline-item {
    display: flex;
    align-items: flex-start;
    margin-bottom: 15px;
  }

  .timeline-icon {
    width: 32px;
    height: 32px;
    background: var(--primary-teal);
    border-radius: 50%;
    display: flex;
    align-items: center;
    justify-content: center;
    margin-right: 15px;
    flex-shrink: 0;
  }

  .timeline-icon svg {
    width: 18px;
    height: 18px;
    color: white;
  }

  .timeline-content {
    flex: 1;
    padding-top: 5px;
  }

  .timeline-content strong {
    color: #333;
    display: block;
    margin-bottom: 3px;
  }

  .timeline-content small {
    color: #666;
  }

  .action-buttons {
    display: flex;
    gap: 15px;
    margin-top: 30px;
  }

  .btn {
    flex: 1;
    padding: 14px 24px;
    border-radius: 10px;
    font-weight: 600;
    text-align: center;
    transition: all 0.3s ease;
    text-decoration: none;
  }

  .btn-primary {
    background: linear-gradient(135deg, var(--primary-teal) 0%, var(--primary-teal-dark) 100%);
    color: white;
    border: none;
  }

  .btn-primary:hover {
    transform: translateY(-2px);
    box-shadow: 0 6px 20px rgba(0, 139, 139, 0.3);
    color: white;
  }

  .btn-outline {
    background: white;
    color: var(--primary-teal);
    border: 2px solid var(--primary-teal);
  }

  .btn-outline:hover {
    background: var(--primary-teal);
    color: white;
  }

  @media (max-width: 768px) {
    .success-header {
      padding: 40px 20px;
    }

    .success-header h2 {
      font-size: 1.5rem;
    }

    .success-body {
      padding: 30px 20px;
    }

    .info-grid {
      grid-template-columns: 1fr;
      gap: 15px;
    }

    .action-buttons {
      flex-direction: column;
    }
  }
</style>

<body>
  <%- include('partials/header') %>

  <div class="success-container">
    <div class="success-card">
      <div class="success-header">
        <div class="success-icon">
          <svg xmlns="http://www.w3.org/2000/svg" fill="currentColor" viewBox="0 0 16 16">
            <path d="M16 8A8 8 0 1 1 0 8a8 8 0 0 1 16 0zm-3.97-3.03a.75.75 0 0 0-1.08.022L7.477 9.417 5.384 7.323a.75.75 0 0 0-1.06 1.06L6.97 11.03a.75.75 0 0 0 1.079-.02l3.992-4.99a.75.75 0 0 0-.01-1.05z"/>
          </svg>
        </div>
        <h2>Order Placed Successfully!</h2>
        <p>Thank you for your purchase. Your order is confirmed.</p>
      </div>

      <div class="success-body">
        <div class="order-id-box">
          <label>Your Order ID</label>
          <div class="order-id"><%= orderId %></div>
        </div>

        <!-- Price Breakdown -->
        <% if (order.subtotal || order.discount) { %>
          <div class="price-breakdown">
            <div class="price-breakdown-title">üí∞ Price Breakdown</div>
            
            <div class="price-row">
              <span>Subtotal (After Offers):</span>
              <span>‚Çπ<%= order.subtotal.toFixed(2) %></span>
            </div>

            <% if (order.discount > 0) { %>
              <div class="price-row discount">
                <span>üéÅ Coupon Discount:</span>
                <span>-‚Çπ<%= order.discount.toFixed(2) %></span>
              </div>
            <% } %>

            <div class="price-row total">
              <span>Total Amount:</span>
              <span class="amount">‚Çπ<%= order.total.toFixed(2) %></span>
            </div>
          </div>
        <% } %>

        <div class="info-grid">
          <div class="info-item">
            <label>Total Amount</label>
            <div class="value">‚Çπ<%= order.total.toFixed(2) %></div>
          </div>
          <div class="info-item">
            <label>Payment Method</label>
            <div class="value"><%= order.paymentMethod %></div>
          </div>
          <div class="info-item">
            <label>Payment Status</label>
            <div class="value" style="color: <%= order.paymentStatus === 'Paid' ? '#28a745' : '#ffc107' %>">
              <%= order.paymentStatus || 'Pending' %>
            </div>
          </div>
          <div class="info-item">
            <label>Order Status</label>
            <div class="value" style="color: var(--primary-teal)"><%= order.status %></div>
          </div>
        </div>

        <div class="timeline">
          <div class="timeline-title">üì¶ What Happens Next?</div>
          
          <div class="timeline-item">
            <div class="timeline-icon">
              <svg xmlns="http://www.w3.org/2000/svg" fill="currentColor" viewBox="0 0 16 16">
                <path d="M16 8A8 8 0 1 1 0 8a8 8 0 0 1 16 0zm-3.97-3.03a.75.75 0 0 0-1.08.022L7.477 9.417 5.384 7.323a.75.75 0 0 0-1.06 1.06L6.97 11.03a.75.75 0 0 0 1.079-.02l3.992-4.99a.75.75 0 0 0-.01-1.05z"/>
              </svg>
            </div>
            <div class="timeline-content">
              <strong>Order Confirmed</strong>
              <small>Your order has been received and is being processed</small>
            </div>
          </div>

          <div class="timeline-item">
            <div class="timeline-icon">
              <svg xmlns="http://www.w3.org/2000/svg" fill="currentColor" viewBox="0 0 16 16">
                <path d="M8 1a2.5 2.5 0 0 1 2.5 2.5V4h-5v-.5A2.5 2.5 0 0 1 8 1zm3.5 3v-.5a3.5 3.5 0 1 0-7 0V4H1v10a2 2 0 0 0 2 2h10a2 2 0 0 0 2-2V4h-3.5z"/>
              </svg>
            </div>
            <div class="timeline-content">
              <strong>Items Being Prepared</strong>
              <small>We're carefully packing your items for shipment</small>
            </div>
          </div>

          <div class="timeline-item">
            <div class="timeline-icon">
              <svg xmlns="http://www.w3.org/2000/svg" fill="currentColor" viewBox="0 0 16 16">
                <path d="M0 3.5A1.5 1.5 0 0 1 1.5 2h9A1.5 1.5 0 0 1 12 3.5V5h1.02a1.5 1.5 0 0 1 1.17.563l1.481 1.85a1.5 1.5 0 0 1 .329.938V10.5a1.5 1.5 0 0 1-1.5 1.5H14a2 2 0 1 1-4 0H5a2 2 0 1 1-3.998-.085A1.5 1.5 0 0 1 0 10.5v-7z"/>
              </svg>
            </div>
            <div class="timeline-content">
              <strong>Shipping & Tracking</strong>
              <small>You'll receive tracking information once shipped</small>
            </div>
          </div>

          <% if (order.paymentMethod === 'COD') { %>
          <div class="timeline-item">
            <div class="timeline-icon">
              <svg xmlns="http://www.w3.org/2000/svg" fill="currentColor" viewBox="0 0 16 16">
                <path d="M1 3a1 1 0 0 1 1-1h12a1 1 0 0 1 1 1H1zm7 8a2 2 0 1 0 0-4 2 2 0 0 0 0 4z"/>
                <path d="M0 5a1 1 0 0 1 1-1h14a1 1 0 0 1 1 1v8a1 1 0 0 1-1 1H1a1 1 0 0 1-1-1V5zm3 0a2 2 0 0 1-2 2v4a2 2 0 0 1 2 2h10a2 2 0 0 1 2-2V7a2 2 0 0 1-2-2H3z"/>
              </svg>
            </div>
            <div class="timeline-content">
              <strong>Payment on Delivery</strong>
              <small>Please keep ‚Çπ<%= order.total.toFixed(2) %> ready for payment upon delivery</small>
            </div>
          </div>
          <% } else { %>
          <div class="timeline-item">
            <div class="timeline-icon">
              <svg xmlns="http://www.w3.org/2000/svg" fill="currentColor" viewBox="0 0 16 16">
                <path d="M16 8A8 8 0 1 1 0 8a8 8 0 0 1 16 0zm-3.97-3.03a.75.75 0 0 0-1.08.022L7.477 9.417 5.384 7.323a.75.75 0 0 0-1.06 1.06L6.97 11.03a.75.75 0 0 0 1.079-.02l3.992-4.99a.75.75 0 0 0-.01-1.05z"/>
              </svg>
            </div>
            <div class="timeline-content">
              <strong>Payment Received</strong>
              <small>Your payment via <%= order.paymentMethod %> has been confirmed</small>
            </div>
          </div>
          <% } %>
        </div>

        <% if (order.discount > 0) { %>
          <div style="background: linear-gradient(135deg, #d4edda 0%, #c3e6cb 100%); border-left: 4px solid #28a745; padding: 15px; border-radius: 8px; margin: 20px 0;">
            <p style="margin: 0; color: #155724;">
              <strong>üéâ Congratulations!</strong><br>
              <small>You saved ‚Çπ<%= order.discount.toFixed(2) %> on this order with coupon discounts!</small>
            </p>
          </div>
        <% } %>

        <div style="background: #f0f8ff; border-left: 4px solid #0099ff; padding: 15px; border-radius: 8px; margin: 20px 0;">
          <p style="margin: 0; color: #333;">
            <strong>üìß Confirmation Email Sent</strong><br>
            <small style="color: #666;">We've sent an order confirmation email to your registered email address.</small>
          </p>
        </div>

        <div class="action-buttons">
          <a href="/my-order" class="btn btn-primary">
            üìã View My Orders
          </a>
          <a href="/shop" class="btn btn-outline">
            üõçÔ∏è Continue Shopping
          </a>
        </div>
      </div>
    </div>
  </div>

  <%- include('partials/footer') %>
</body>
</html>