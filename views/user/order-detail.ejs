<!DOCTYPE html>
<html lang="en">

<head>
    <%- include('./partials/head') %>
        <title>Order Details</title>
        <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
        <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" rel="stylesheet">
</head>

<body class="bg-light">
    <%- include('./partials/header') %>

        <div class="container mt-4 mb-5">
            <!-- Page Header -->
            <div class="row mb-4">
                <div class="col-12 d-flex justify-content-between align-items-center">
                    <h2 class="mb-0 text-dark">
                        <i class="fas fa-receipt me-2"></i>Order Details
                    </h2>
                    <a href="/my-order" class="btn btn-outline-secondary">
                        <i class="fas fa-arrow-left me-2"></i>Back to Orders
                    </a>
                </div>
            </div>

            <!-- Order Information -->
            <div class="row mb-4">
                <div class="col-12">
                    <div class="card shadow border-0">
                        <div class="card-header bg-primary text-white py-3">
                            <h5 class="mb-0"><i class="fas fa-info-circle me-2"></i>Order Information</h5>
                        </div>
                        <div class="card-body">
                            <div class="row">
                                <div class="col-md-3 mb-3">
                                    <small class="text-muted d-block">Order ID</small>
                                    <strong>
                                        <%= order.orderId %>
                                    </strong>
                                </div>
                                <div class="col-md-3 mb-3">
                                    <small class="text-muted d-block">Order Date</small>
                                    <strong>
                                        <%= new Date(order.createdAt).toLocaleDateString() %>
                                    </strong>
                                </div>
                                <div class="col-md-3 mb-3">
                                    <small class="text-muted d-block">Order Status</small>
                                    <span id="orderStatusBadge" class="badge bg-primary px-3 py-2">
                                        <%= order.status %>
                                    </span>
                                </div>
                                <div class="col-md-3 mb-3">
                                    <small class="text-muted d-block">Payment Method</small>
                                    <strong>
                                        <%= order.paymentMethod || 'N/A' %>
                                    </strong>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Order Actions -->
            <div class="row mb-4">
                <div class="col text-end">
                    <% if(order.status==="Pending" || order.status==="Shipped" ) { %>
                        <button class="btn btn-danger btn-sm" onclick="cancelOrder('<%= order.orderId %>')">
                            Cancel Order
                        </button>
                        <% } %>
                            <% if(order.status==="Delivered" ) { %>
                                <button class="btn btn-warning btn-sm" onclick="returnOrder('<%= order.orderId %>')">
                                    Return Order
                                </button>
                                <% } %>
                                    <a href="/orders/<%= order.orderId %>/invoice" class="btn btn-sm btn-success">
                                        <i class="fas fa-file-download me-1"></i>Download Invoice
                                    </a>
                </div>
            </div>

            <!-- Shipping Address -->
            <% if(order.address) { %>
                <div class="row mb-4">
                    <div class="col-12">
                        <div class="card shadow border-0">
                            <div class="card-header bg-success text-white py-3">
                                <h5 class="mb-0"><i class="fas fa-map-marker-alt me-2"></i>Shipping Address</h5>
                            </div>
                            <div class="card-body">
                                <p class="mb-1"><strong>
                                        <%= order.address.fullName %>
                                    </strong></p>
                                <p class="mb-1">
                                    <%= order.address.street %>
                                </p>
                                <p class="mb-1">
                                    <%= order.address.city %>, <%= order.address.state %>
                                            <%= order.address.pincode %>
                                </p>
                                <p class="mb-0"><i class="fas fa-phone me-2"></i>
                                    <%= order.address.phone %>
                                </p>
                            </div>
                        </div>
                    </div>
                </div>
                <% } %>

                    <!-- Order Items -->
                    <div class="row mb-4">
                        <div class="col-12">
                            <div class="card shadow border-0">
                                <div class="card-header bg-primary text-white py-3">
                                    <h5 class="mb-0"><i class="fas fa-shopping-bag me-2"></i>Order Items</h5>
                                </div>
                                <div class="card-body">
                                    <% order.items.forEach(item=> { %>
                                        <div class="row mb-3 pb-3 border-bottom item-row" data-itemid="<%= item._id %>"
                                            data-status="<%= item.itemStatus %>">
                                            <div class="col-md-2">
                                                <% if(item.variantId?.images?.length> 0) { %>
                                                    <img src="<%= item.variantId.images[0] %>"
                                                        alt="<%= item.productId?.name || 'Product' %>"
                                                        class="img-fluid rounded"
                                                        style="max-height: 100px; object-fit: cover;">
                                                    <% } else { %>
                                                        <div class="bg-secondary rounded d-flex align-items-center justify-content-center"
                                                            style="height: 100px;">
                                                            <i class="fas fa-image fa-2x text-white"></i>
                                                        </div>
                                                        <% } %>
                                            </div>
                                            <div class="col-md-6">
                                                <h6 class="mb-2">
                                                    <%= item.productId?.name %>
                                                </h6>
                                                <p class="text-muted mb-1 small">
                                                    <%= item.productId?.description || '' %>
                                                </p>
                                                <p class="mb-1">
                                                    <span class="badge bg-secondary">Colour: <%= item.variantId?.colour
                                                            %></span>
                                                    <span class="badge item-status 
                                        <%= item.itemStatus === 'Pending' ? 'bg-info' 
                                        : item.itemStatus === 'Shipped' ? 'bg-primary' 
                                        : item.itemStatus === 'Delivered' ? 'bg-success' 
                                        : item.itemStatus === 'Cancelled' ? 'bg-danger' 
                                        : 'bg-warning' %> ms-2">
                                                        <%= item.itemStatus %>
                                                    </span>
                                                </p>
                                            </div>
                                            <div class="col-md-2 text-center">
                                                <small class="text-muted d-block">Quantity</small>
                                                <strong>
                                                    <%= item.quantity %>
                                                </strong>
                                            </div>
                                            <div class="col-md-2 text-end">
                                                <small class="text-muted d-block">Price</small>
                                                <strong>₹<%= item.price %></strong>
                                                <div class="mt-2">
                                                    <small class="text-muted">Subtotal</small>
                                                    <div class="fw-bold text-success">₹<%= item.price * item.quantity %>
                                                    </div>
                                                </div>
                                                <!-- Conditional buttons per item -->
                                                <% if(item.itemStatus==='Pending' || item.itemStatus==='Shipped' ) { %>
                                                    <button class="btn btn-sm btn-danger mt-2"
                                                        onclick="cancelItem('<%= order.orderId %>', '<%= item._id %>', this)">Cancel
                                                        Item</button>
                                                    <% } %>
                                                        <% if(item.itemStatus==='Delivered' ) { %>
                                                            <button class="btn btn-sm btn-warning mt-2"
                                                                onclick="returnItem('<%= order.orderId %>', '<%= item._id %>', this)">Return
                                                                Item</button>

                                                            <% } else if(item.itemStatus==='ReturnRequested' ) { %>
                                                                <p class="text-warning mt-2 small">Return request
                                                                    pending approval</p>

                                                                <% } else if(item.itemStatus==='ReturnRejected' ) { %>
                                                                    <p class="text-danger mt-2 small">Return request
                                                                        rejected</p>

                                                                    <% } else if(item.itemStatus==='Returned' ) { %>
                                                                        <p class="text-success mt-2 small">Item returned
                                                                            successfully</p>
                                                                        <% } %>
                                            </div>
                                        </div>
                                        <% }) %>
                                </div>
                            </div>
                        </div>
                    </div>

                    <!-- Order Summary -->
                    <div class="row mb-4">
                        <div class="col-md-6 ms-auto">
                            <div class="card shadow border-0">
                                <div class="card-header bg-dark text-white py-3">
                                    <h5 class="mb-0"><i class="fas fa-calculator me-2"></i>Order Summary</h5>
                                </div>
                                <div class="card-body">
                                    <div class="d-flex justify-content-between mb-2">
                                        <span>Subtotal:</span>
                                        <strong>₹<%= order.subtotal %></strong>
                                    </div>
                                    <hr>
                                    <div class="d-flex justify-content-between">
                                        <h5 class="mb-0">Total Amount:</h5>
                                        <h5 class="mb-0 text-success">₹<%= order.total %>
                                        </h5>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
        </div>

        <!-- Scripts -->
        <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
        <%- include('./partials/footer') %>
            <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>

            <!-- JS functions for cancel/return items & order -->
            <script src="/js/orderActions.js"></script> <!-- Move your JS functions to a separate file -->
</body>

</html>