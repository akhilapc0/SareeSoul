<!DOCTYPE html>
<html lang="en">
<head>
    <%- include('./partials/head') %>
    <title>Change Email</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" rel="stylesheet">
</head>
<body class="bg-light">
    <%- include('./partials/header') %>
    
    <div class="container mt-4 mb-5">
        <!-- Page Header -->
        <div class="row mb-4">
            <div class="col-12">
                <div class="text-center">
                    <h2 class="mb-0 text-dark">Change Email</h2>
                </div>
            </div>
        </div>

        <!-- Change Email Form Section -->
        <div class="row justify-content-center">
            <div class="col-lg-6 col-md-8">
                <div class="card shadow border-0">
                    <div class="card-header bg-success text-white py-3">
                        <h5 class="mb-0">
                            <i class="fas fa-envelope me-2"></i>Change Email Address
                        </h5>
                    </div>
                    <div class="card-body">
                        <form id="changeEmailForm">
                            <div class="mb-3">
                                <label for="newEmail" class="form-label">New Email</label>
                                <input type="email" name="newEmail" id="newEmail" class="form-control" required>
                                <div class="text-danger" id="emailError"></div>
                            </div>
                            <button type="submit" class="btn btn-primary">Send OTP</button>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
    
    <%- include('./partials/footer') %>
    
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <script>
        document.getElementById("changeEmailForm").addEventListener("submit", async function (e) {
            e.preventDefault();

            const formData = new FormData(this);
            const data = Object.fromEntries(formData);

            try {
                const res = await fetch("/profile/change-email", {
                    method: "POST",
                    headers: { "Content-Type": "application/json" },
                    body: JSON.stringify(data),
                });

                const result = await res.json();

                if (!result.success) {
                    // Backend validation errors
                    if (result.errors && result.errors.newEmail) {
                        document.getElementById("emailError").innerText = result.errors.newEmail;
                    } else {
                        Swal.fire("Error", result.message || "Something went wrong", "error");
                    }
                    return;
                }

                Swal.fire({
                    icon: "success",
                    title: "OTP Sent!",
                    text: "Check your new email for the OTP.",
                    timer: 2000,
                    showConfirmButton: false,
                }).then(() => {
                    // Redirect to OTP page with email in query
                    window.location.href = `/profile/verify-email-otp?newEmail=${encodeURIComponent(data.newEmail)}`;
                });

            } catch (err) {
                console.error(err);
                Swal.fire("Error", "Server error", "error");
            }
        });
    </script>
</body>
</html>
