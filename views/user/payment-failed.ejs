<%- include('partials/head') %>

<style>
  :root {
    --primary-teal: #008B8B;
    --primary-teal-dark: #006B6B;
    --danger-red: #dc3545;
    --warning-yellow: #ffc107;
    --light-bg: #f8f9fa;
    --card-shadow: 0 2px 8px rgba(0, 0, 0, 0.08);
  }

  body {
    background-color: var(--light-bg);
    font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
  }

  .failed-container {
    max-width: 700px;
    margin: 50px auto;
    padding: 20px;
  }

  .failed-card {
    background: white;
    border-radius: 16px;
    box-shadow: 0 4px 20px rgba(0, 0, 0, 0.1);
    overflow: hidden;
  }

  .failed-header {
    background: linear-gradient(135deg, var(--danger-red) 0%, #c82333 100%);
    padding: 50px 30px;
    text-align: center;
    color: white;
  }

  .failed-icon {
    width: 100px;
    height: 100px;
    background: white;
    border-radius: 50%;
    display: inline-flex;
    align-items: center;
    justify-content: center;
    margin-bottom: 20px;
    animation: shake 0.5s ease-in-out;
  }

  @keyframes shake {
    0%, 100% { transform: translateX(0); }
    25% { transform: translateX(-10px); }
    75% { transform: translateX(10px); }
  }

  .failed-icon svg {
    width: 60px;
    height: 60px;
    color: var(--danger-red);
  }

  .failed-header h2 {
    font-size: 2rem;
    font-weight: 700;
    margin-bottom: 10px;
  }

  .failed-header p {
    font-size: 1.1rem;
    opacity: 0.95;
  }

  .failed-body {
    padding: 40px 30px;
  }

  .reason-box {
    background: #fff3cd;
    border: 2px solid var(--warning-yellow);
    border-radius: 12px;
    padding: 20px;
    margin-bottom: 25px;
    text-align: center;
  }

  .reason-box .icon {
    font-size: 2rem;
    margin-bottom: 10px;
  }

  .reason-box p {
    margin: 0;
    color: #856404;
    font-size: 1rem;
    line-height: 1.6;
  }

  .order-id-box {
    background: linear-gradient(135deg, rgba(0, 139, 139, 0.1) 0%, rgba(0, 139, 139, 0.05) 100%);
    border: 2px solid var(--primary-teal);
    border-radius: 12px;
    padding: 15px;
    text-align: center;
    margin-bottom: 25px;
  }

  .order-id-box label {
    font-size: 0.85rem;
    color: #666;
    margin-bottom: 5px;
    display: block;
  }

  .order-id-box .order-id {
    font-size: 1.2rem;
    font-weight: 700;
    color: var(--primary-teal);
  }

  .info-box {
    background: #e8f4f8;
    border-left: 4px solid #0099ff;
    padding: 20px;
    border-radius: 8px;
    margin-bottom: 25px;
  }

  .info-box h6 {
    font-size: 1rem;
    font-weight: 600;
    color: #333;
    margin-bottom: 10px;
    display: flex;
    align-items: center;
  }

  .info-box h6 svg {
    width: 20px;
    height: 20px;
    margin-right: 8px;
    color: #0099ff;
  }

  .info-box p {
    margin: 0;
    color: #555;
    font-size: 0.95rem;
    line-height: 1.6;
  }

  .action-buttons {
    display: flex;
    flex-direction: column;
    gap: 12px;
    margin-top: 25px;
  }

  .btn {
    padding: 14px 24px;
    border-radius: 10px;
    font-weight: 600;
    text-align: center;
    transition: all 0.3s ease;
    text-decoration: none;
    border: none;
    cursor: pointer;
  }

  .btn-primary {
    background: linear-gradient(135deg, var(--primary-teal) 0%, var(--primary-teal-dark) 100%);
    color: white;
  }

  .btn-primary:hover {
    transform: translateY(-2px);
    box-shadow: 0 6px 20px rgba(0, 139, 139, 0.3);
    color: white;
  }

  .btn-outline {
    background: white;
    color: #666;
    border: 2px solid #ddd;
  }

  .btn-outline:hover {
    background: #f5f5f5;
    border-color: #bbb;
    color: #333;
  }

  .help-section {
    text-align: center;
    padding-top: 25px;
    border-top: 2px solid #f0f0f0;
    margin-top: 25px;
  }

  .help-section p {
    color: #888;
    font-size: 0.9rem;
    margin-bottom: 10px;
  }

  .help-section a {
    color: var(--primary-teal);
    font-weight: 600;
    text-decoration: none;
  }

  .help-section a:hover {
    text-decoration: underline;
  }

  @media (max-width: 768px) {
    .failed-header {
      padding: 40px 20px;
    }

    .failed-header h2 {
      font-size: 1.5rem;
    }

    .failed-body {
      padding: 30px 20px;
    }
  }
</style>

<body>
  <%- include('partials/header') %>

  <div class="failed-container">
    <div class="failed-card">
      <div class="failed-header">
        <div class="failed-icon">
          <svg xmlns="http://www.w3.org/2000/svg" fill="currentColor" viewBox="0 0 16 16">
            <path d="M8 15A7 7 0 1 1 8 1a7 7 0 0 1 0 14zm0 1A8 8 0 1 0 8 0a8 8 0 0 0 0 16z"/>
            <path d="M4.646 4.646a.5.5 0 0 1 .708 0L8 7.293l2.646-2.647a.5.5 0 0 1 .708.708L8.707 8l2.647 2.646a.5.5 0 0 1-.708.708L8 8.707l-2.646 2.647a.5.5 0 0 1-.708-.708L7.293 8 4.646 5.354a.5.5 0 0 1 0-.708z"/>
          </svg>
        </div>
        <h2>Payment Failed</h2>
        <p>We couldn't process your payment</p>
      </div>

      <div class="failed-body">
        <div class="reason-box">
          <div class="icon">‚ö†Ô∏è</div>
