                            </div>
                        </div>
                    </div>
                </div>
                <!-- /Mobile -->
            </div>
        </div>
    </div>

    <!-- Script for Auth Links -->
    <script>
    (function() {
        const userData = <%- JSON.stringify(user) %>;
        console.log(userData)

        function renderAuthLinks() {
            const desktop = document.getElementById('login-signup-desktop');
            const mobile = document.getElementById('login-signup-mobile');
            const mobileInfo = document.getElementById('login-signup-mobile-info');

            if (userData) {
                //logged in
                if (desktop) {
                    desktop.innerHTML = `
                        <i class="fi-rs-user"></i>
                        <a href="/account">Welcome, ${userData.firstName}</a>
                        | <a href="/logout">Logout</a>
                    `;
                }
                if (mobile) {
                    mobile.innerHTML = `<a href="/account">Welcome, ${userData.firstName}</a> | <a href="/logout">Logout</a>`;
                }
                if (mobileInfo) {
                    mobileInfo.innerHTML = `<a href="/account">Welcome, ${userData.firstName}</a> | <a href="/logout">Logout</a>`;
                }
            } else {
                //not logged in
                if (desktop) {
                    desktop.innerHTML = `
                        <i class="fi-rs-user"></i>
                        <a href="/login">Log In</a> / <a href="/register">Sign Up</a>
                    `;
                }
                if (mobile) {
                    mobile.innerHTML = `<a href="/login">Log In</a> / <a href="/register">Sign Up</a>`;
                }
                if (mobileInfo) {
                    mobileInfo.innerHTML = `<a href="/login">Log In</a> / <a href="/register">Sign Up</a>`;
                }
            }
        }

        renderAuthLinks();
    })();
    </script>
</header>
